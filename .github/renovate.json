{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "nix": {
    "enabled": true
  },
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ]
  },
  "labels": [
    "dependencies",
    "renovate"
  ],
  "rangeStrategy": "bump",
  "lockFileMaintenance": {
    "enabled": true
  },
  "platformAutomerge": true,
  "dependencyDashboard": false,
  "automerge": true,
  "branchConcurrentLimit": 0,
  "stabilityDays": 3,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^go\\.mod$"],
      "matchStrings": ["go (?<currentValue>\\d+\\.\\d+(\\.\\d+)?)"],
      "depNameTemplate": "go",
      "datasourceTemplate": "golang-version"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "postUpgradeTasks": {
        "commands": [
          "nix run nixpkgs#nix-update -- --flake --version=skip default"
        ],
        "fileFilters": ["flake.nix"],
        "executionMode": "branch"
      }
    }
  ]
}
